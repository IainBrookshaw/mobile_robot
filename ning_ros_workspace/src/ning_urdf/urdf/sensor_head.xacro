<robot name="ningauble" xmlns:xacro="http://ros.org/wiki/xacro">
  
    <link name="sensor_head">
        <collision name="sensor_head_collision">
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.15" length="0.2" />
            </geometry>
        </collision>
        
        <visual name="sensor_head_visual">
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.15" length="0.2" />
            </geometry>
        </visual>
    </link>

    <joint name="neck_joint" type="continuous" >
        <axis xyz="0 0 1" rpy="0 0 0"/>
        <parent link="chassis" />
        <child link="sensor_head" />
        <origin xyz="0 0 0" rpy="0 0 0" />
    </joint>
</robot>
